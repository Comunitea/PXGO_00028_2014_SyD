<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Products -->
        <record id="products_page" model="website.page">
            <field name="name">Products</field>
            <field name="website_ids" eval="[(6, 0, [ref('website.default_website')])]"/>
            <field name="menu_ids" eval="[(6, 0, [ref('website_sande.menu_products')])]"/>
            <field name="website_published">True</field>
            <field name="url">/ours-products</field>
            <field name="view_id" ref="ours_products"/>
        </record>

        <!-- Services -->
        <record id="services_page" model="website.page">
            <field name="name">Services</field>
            <field name="website_ids" eval="[(6, 0, [ref('website.default_website')])]"/>
            <field name="menu_ids" eval="[(6, 0, [ref('website_sande.menu_services')])]"/>
            <field name="website_published">True</field>
            <field name="url">/ours-services</field>
            <field name="view_id" ref="ours_services"/>
        </record>

        <!-- Quality Policy -->
        <record id="quality_page" model="website.page">
            <field name="name">Quality Policy</field>
            <field name="website_ids" eval="[(6, 0, [ref('website.default_website')])]"/>
            <field name="website_published">True</field>
            <field name="url">/legal/quality-policy</field>
            <field name="view_id" ref="quality_policy"/>
        </record>
    </data>
</odoo>