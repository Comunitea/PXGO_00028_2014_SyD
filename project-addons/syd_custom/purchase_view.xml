<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

      <record id="purchase_order_change_shpiment_count" model="ir.ui.view">
          <field name="name">purchase.order.form</field>
          <field name="model">purchase.order</field>
          <field name="inherit_id" ref="purchase.purchase_order_2_stock_picking"/>
          <field name="arch" type="xml">
                <!--field name="shipment_count" position="replace">
                    <field name="shipment_count" widget="statinfo" string="In Shipments" help="Incoming Shipments"/>
                </field-->
                <xpath expr="//div[contains(@class, 'oe_button_box')]/button[@name='view_picking']" position="replace">
                    <button type="object"
                            name="view_picking"
                            class="oe_stat_button"
                            icon="fa-truck"
                            attrs="{'invisible': [('shipment_count_', '=', 0)]}">
                            <field name="shipment_count_" widget="statinfo" string="In Shipments" help="Incoming Shipments"/>
                    </button>
                </xpath>
                <field name="picking_type_id" position="after">
                    <field name="carrier"/>
                </field>
          </field>
      </record>
      
       <record id="purchase_order_change_approve" model="ir.ui.view">
          <field name="name">purchase.order.change.approve</field>
          <field name="model">purchase.order</field>
          <field name="inherit_id" ref="purchase.purchase_order_form"/>
          <field name="arch" type="xml">
                <field name="date_approve" position="replace"/>
          </field>
      </record>
      
      <record id="purchase_order_position_approve" model="ir.ui.view">
          <field name="name">purchase.order.position.approve</field>
          <field name="model">purchase.order</field>
          <field name="inherit_id" ref="syd_custom.purchase_order_change_approve"/>
          <field name="arch" type="xml">
                <field name="date_order" position="after">
                    <field name="date_approve" groups="base.group_no_one"/>
                </field>
          </field>
      </record>

    </data>
</openerp>
