<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="affix_top_menu" inherit_id="portal.frontend_layout" active="True" customize_show="True" name="Affix Top Menu">
        <!-- Make it real customize but taking care about cookies message-->
        <xpath expr="//div[@id='wrapwrap']/header" position="attributes">
            <attribute name="t-att-class">'not_accepted_cookies' if request and not request.session.get('accepted_cookies') else 'o_affix_header ' + pageName if pageName else 'o_affix_header'</attribute>
        </xpath>
    </template>

</odoo>