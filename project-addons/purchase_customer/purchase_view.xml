<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="purchase_order_form_add_customer" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="pricelist_id" position="after">
                    <field name="customer_id"/>
                </field>
            </field>
        </record>

        <record id="purchase_order_tree_add_customer" model="ir.ui.view">
            <field name="name">purchase.order.tree</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="customer_id"/>
                </field>
            </field>
        </record>

        <record id="purchase_order_search_add_customer" model="ir.ui.view">
            <field name="name">purchase.order.filter</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="customer_id" operator="child_of"/>
                </field>
                <group string="Group By" position="inside">
                    <filter string="Customer" icon="terp-partner" domain="[]" context="{'group_by':'customer_id'}"/>
                </group>
            </field>
        </record>

    </data>
</openerp>
