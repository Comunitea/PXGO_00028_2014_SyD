<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <template id="report_delivery_document_custom" inherit_id="stock_picking_report_valued.valued_report_picking">
            <xpath expr="//th[@name='td_sched_date_h']" position="after">
                <th t-if="o.ship_id"><strong>Buque</strong></th>
            </xpath>
            <xpath expr="//td[@name='td_sched_date']" position="after">
                <td  t-if="o.ship_id">
                    <span t-field="o.ship_id.name"/>
                </td>
            </xpath>
            <xpath expr="//th[@groups='sale.group_discount_per_so_line']" position="attributes">
                <attribute name="t-if">not net</attribute>
            </xpath>
            <xpath expr="//span[@t-field='move_line.sale_price_unit']/.." position="attributes">
                <attribute name="t-if">not net</attribute>
            </xpath>
            <xpath expr="//span[@t-field='move_line.sale_price_unit']/.." position="after">
                <td class="text-right" t-if="net">
                    <span t-field="move_line.sale_price_unit_net" />
                </td>
            </xpath>
            <xpath expr="//span[@t-field='move_line.sale_discount']/.." position="attributes">
                <attribute name="t-if">not net</attribute>
            </xpath>
            <xpath expr="//tr[@t-foreach='o.move_line_ids']" position="after">
                <tr t-foreach="o.service_ids" t-as="service">
                    <td><span t-field="service.product_id"/></td>
                    <td t-if="has_serial_number"></td>
                    <td class="text-center"><span t-field="service.quantity"/> <span t-field="service.product_uom"/></td>
                    <t t-if="o.valued and o.sale_id and o.service_ids">
                        <td class="text-right" t-if="not net">
                            <span t-field="service.order_price_unit" />
                        </td>
                        <td class="text-right" t-if="net">
                            <span t-field="service.order_price_unit_net" />
                        </td>
                        <td class="text-right" groups="sale.group_discount_per_so_line" t-if="not net">
                            <span t-field="service.discount" />
                        </td>
                        <td class="text-right">
                            <span t-field="service.price_subtotal" />
                        </td>
                    </t>
                </tr>
            </xpath>
            <xpath expr="//t[@t-if='o.valued and o.sale_id and o.move_line_ids']/th[last()]" position="replace"/>
            <xpath expr="//span[@t-field='move_line.sale_tax_description']/.." position="replace"/>
            <xpath expr="//p[@t-if='o.backorder_id']" position="before">
                <p><span>Returns are not accepted without our written consent, after 15 days of delivery of goods or merchandise that is manipulated.<br/><br/></span></p>
                <p t-if="o.external_note">
                    <span t-field="o.external_note"/>
                </p>
            </xpath>
        </template>

        <template id="report_deliveryslip_net">
            <t t-call="web.html_container">
                <t t-set="net" t-value="True"/>
                <t t-foreach="docs" t-as="o">
                    <t t-call="stock.report_delivery_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

</odoo>
