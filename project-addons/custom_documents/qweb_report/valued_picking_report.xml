<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <template id="report_valued_picking_document">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-xs-5 col-xs-offset-7">
                             <div t-if="o.picking_type_id.code=='incoming' and o.partner_id">
                                 <span><strong>Supplier Address:</strong></span>
                             </div>
                             <div t-if="o.picking_type_id.code=='internal' and o.partner_id">
                                 <span><strong>Warehouse Address:</strong></span>
                             </div>
                             <div t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
                                 <span><strong>Customer Address:</strong></span>
                             </div>
                             <div t-if="o.partner_id" name="partner_header">
                                 <div t-field="o.partner_id"
                                    t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                                <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                             </div>
                        </div>
                    </div>
                    <h2>
                        <span t-field="o.picking_type_id.name"/>
                        <span t-esc="o.name.replace('\\', '')"/>
                    </h2>
                     <table class="table table-condensed">
                    <thead>
                        <tr>
                                <th t-if="o.sale_id.client_order_ref"><strong>Reference</strong></th>
                                <th t-if="o.picking_type_id.code == 'outgoing'"><strong>Carrier</strong></th>
                                <th t-if="o.ship_id"><strong>Buque</strong></th>
                                <th t-if="o.weight"><strong>Weight</strong></th>
                                <th t-if="o.date_done"><strong>Date</strong></th>
                            </tr>
                    </thead>
                    <tbody>
                       <tr>
                            <td t-if="o.sale_id.client_order_ref">
                                <span t-field="o.sale_id.client_order_ref"/>
                            </td>
                            <td t-if="o.picking_type_id.code == 'outgoing'">
                                <span t-field="o.carrier_id"/>
                            </td>
                            <td  t-if="o.ship_id">
                                <span t-field="o.ship_id.name"/>
                            </td>
                            <td t-if="o.weight">
                                <span t-field="o.weight"/>
                            </td>
                             <td t-if="o.date_done">
                                <span t-field="o.date_done" t-field-options='{"format": "dd/MM/y"}'/>
                            </td>
                        </tr>
                    </tbody>
                    </table>
                    <br/>
                    <br/>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th><strong>Reference</strong></th>
                                <th><strong>Description</strong></th>
                                <th class="text-right"><strong>Quantity</strong></th>
                                <t t-if="o.pack_operation_ids">
                                    <th class="text-right"><strong>Serial No.</strong></th>
                                </t>
                                <!--th class="text-right"><strong>NÂº serie dest.</strong></th-->
                                <!--t
                t-if="o.picking_type_id.code != 'incoming'"><th><strong>Source</strong></th></t-->
                                <t t-if="o.picking_type_id.code != 'outgoing'"><th><strong>Destination</strong></th></t>
                                <th class="text-right"><strong>Price unit</strong></th>
                                <th t-if="not net"><strong>Disc.(%)</strong></th>
                                <th class="text-right"><strong>Total</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="not o.pack_operation_ids">
                                <tr t-foreach="o.move_lines" t-as="move">
                                    <t t-if="not move.pack_component">
                                        <td><span t-field="move.product_id.default_code"/></td>
                                        <td><span t-field="move.name"/></td>
                                        <td class="text-right"><span t-field="move.product_uom_qty"/> <span t-field="move.product_uom" groups="product.group_uom"/></td>
                                        <td class="text-right" t-if="not net"><span
                                                t-field="move.order_price_unit"
                                                t-field-options='{"widget": "monetary", "display_currency": "o.sale_id.pricelist_id.currency_id"}'/></td>
                                        <td class="text-right" t-if="net"><span
                                                t-field="move.order_price_unit_net"
                                                t-field-options='{"widget": "monetary", "display_currency": "o.sale_id.pricelist_id.currency_id"}'/></td>
                                        <td t-if="not net">
                                            <span t-field="move.discount"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="move.price_subtotal"
                                                t-field-options='{"widget": "monetary", "display_currency": "o.sale_id.pricelist_id.currency_id"}'/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <t t-if="o.pack_operation_ids">
                                <tr t-foreach="o.pack_operation_ids" t-as="pack_operation">
                                    <t t-if="pack_operation.product_qty &gt; 0 and not pack_operation.linked_move_operation_ids[0].move_id.pack_component">
                                        <td><span t-field="pack_operation.product_id.default_code"/></td>
                                        <td><span t-field="pack_operation.linked_move_operation_ids[0].move_id.name"/></td>
                                        <td class="text-right"><span t-field="pack_operation.product_qty"/> <span t-field="pack_operation.product_uom_id" groups="product.group_uom"/></td>
                                         <td class="text-right">
                                             <span t-if="pack_operation.lot_id">
                                                <span t-field="pack_operation.lot_id"/>
                                             </span>
                                         </td>
                                        <td class="text-right" t-if="not net"><span
                                                t-field="pack_operation.linked_move_operation_ids[0].move_id.order_price_unit"
                                                t-field-options='{"widget": "monetary", "display_currency": "o.sale_id.pricelist_id.currency_id"}'/></td>
                                        <td class= "text-right" t-if="net"><span
                                                t-field="pack_operation.linked_move_operation_ids[0].move_id.order_price_unit_net"
                                                t-field-options='{"widget": "monetary", "display_currency": "o.sale_id.pricelist_id.currency_id"}'/></td>
                                        <td t-if=" not net"><span
                                                t-field="pack_operation.linked_move_operation_ids[0].move_id.discount"/></td>
                                        <td class="text-right">
                                            <span t-field="pack_operation.price_subtotal"
                                                t-field-options='{"widget": "monetary", "display_currency": "o.sale_id.pricelist_id.currency_id"}'/>
                                        </td>
                                    </t>
                                </tr>
                            </t>

                            <tr t-foreach="o.service_ids" t-as="service">
                                <td><span t-field="service.product_id.default_code"/></td>
                                <td><span t-field="service.product_id.name"/></td>
                                <td class="text-right"><span t-field="service.quantity"/> <span t-field="service.product_uom" groups="product.group_uom"/></td>
                                <td t-if="o.pack_operation_ids"></td>
                                <td class="text-right" t-if="not net"><span
                                        t-field="service.order_price_unit"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.sale_id.pricelist_id.currency_id"}'/></td>
                                <td class="text-right" t-if="net"><span
                                        t-field="service.order_price_unit_net"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.sale_id.pricelist_id.currency_id"}'/></td>
                                <td t-if="not net">
                                    <span t-field="service.discount"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="service.price_subtotal"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.sale_id.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td><strong>Total Without Taxes</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.sale_id.pricelist_id.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Taxes</td>
                                    <td class="text-right">
                                        <span t-field="o.amount_tax"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.sale_id.pricelist_id.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.sale_id.pricelist_id.currency_id"}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <span>
                      Returns are not accepted without our written consent, after 15 days of delivery of goods or merchandise that is manipulated.
                        <br/>
                        <br/>
                    </span>
                    <span t-if="o.external_note">
                        <span t-field="o.external_note"/>
                    </span>
                </div>
            </t>
        </template>

        <template id="report_valued_picking">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'custom_documents.report_valued_picking_document')"/>
                </t>
            </t>
        </template>
    </data>
</openerp>

