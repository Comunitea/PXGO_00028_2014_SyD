<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_proforma_">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <!--div class="col-xs-6">
                            <strong t-if="o.partner_shipping_id == o.partner_invoice_id">Invoice and shipping address:</strong>
                            <strong t-if="o.partner_shipping_id != o.partner_invoice_id">Invoice address:</strong>
                            <div t-field="o.partner_invoice_id"
                                t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                            <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                            <div t-if="o.partner_shipping_id != o.partner_invoice_id" class="mt8">
                                <strong>Shipping address:</strong>
                                <div t-field="o.partner_shipping_id"
                                    t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                                <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                            </div>
                        </div-->
                        <div class="col-xs-5 col-xs-offset-7">
                            <div t-field="o.partner_id"
                                t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                            <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 text-left">
                            <h2>
                                <span>Proforma</span>
                                <span t-field="o.name"/>
                            </h2>
                        </div>
                        <div class="col-xs-6 text-right">
                            <h2>
                                <span t-field="o.tittle"/>
                            </h2>
                        </div>
                    </div>

                    <div t-if="o.baseline_data" class="row">
                        <div class="col-xs-12">
                            <div class="row">
                                <div class="col-xs-12">
                                    <strong>Starting data indicated by the client:</strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <span t-field="o.baseline_data"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt32 mb32" id="informations">
                        <div class="col-xs-2" t-if="o.partner_id.supplier_ref">
                            <strong>Ref. proveedor:</strong>
                            <p t-field="o.partner_id.supplier_ref"/>
                        </div>
                        <div t-if="o.client_order_ref" class="col-xs-2">
                            <strong>Reference:</strong>
                            <p t-field="o.client_order_ref"/>
                        </div>
                        <div t-if="o.ship_id" class="col-xs-2">
                            <strong>Ship:</strong>
                            <p t-field="o.ship_id"/>
                        </div>
                        <div t-if="o.date_order" class="col-xs-2">
                            <strong t-if="o.state not in ['draft','sent']">Date Ordered:</strong>
                            <strong t-if="o.state in ['draft','sent']">Quotation Date:</strong>
                            <p t-field="o.date_order" t-field-options='{"format": "dd/MM/y"}'/>
                        </div>
                        <div t-if="o.user_id.name" class="col-xs-2">
                            <strong>Salesperson:</strong>
                            <p t-field="o.user_id.name"/>
                        </div>
                    </div>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th class="text-right">Quantity</th>
                                <th class="text-right">Unit Price</th>
                                <t t-if="o.have_discounts">
                                    <th groups="sale.group_discount_per_so_line">Disc.(%)</th>
                                </t>
                                <th class="text-right">Price</th>
                            </tr>
                       </thead>
                       <tbody class="sale_tbody">
                            <tr t-foreach="o.order_line" t-as="l">
                                <t t-if="l.pack_depth == 0">
                                    <td>
                                       <span t-field="l.name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.product_uom_qty"/>
                                        <span groups="product.group_uom" t-field="l.product_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                    </td>
                                    <t t-if="o.have_discounts">
                                        <td groups="sale.group_discount_per_so_line">
                                            <span t-field="l.discount"/>
                                        </td>
                                    </t>
                                    <td class="text-right">
                                        <span t-field="l.price_subtotal"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                    </td>
                                </t>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td><strong>Total Without Taxes</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Taxes</td>
                                    <td class="text-right">
                                        <span t-field="o.amount_tax"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <strong>Aceptance quotation NÂº <span t-field="o.name"/>: <span t-field="o.tittle"/></strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">Customer conformity:</div>
                        <div class="col-xs-4">Date:</div>
                    </div>
                    <p></p>

                    <p t-field="o.note" />
                    <p t-if="o.payment_term.note">
                        <strong>Payment Term:</strong>
                        <span t-field="o.payment_term.note"/>
                    </p>
                    <div class="row" t-if="o.payment_mode_id and o.payment_mode_id.show_client_account" style="page-break-inside: avoid;">
                        <div class="col-xs-4">
                            <strong>Payment mode:</strong> <span t-field="o.payment_mode_id.name"/>
                        </div>
                        <div t-if="o.partner_id.bank_ids">
                            <div class="col-xs-4">
                                Bank account: <span t-esc="o.partner_id.bank_ids[0].acc_number"/>
                            </div>
                            <div class="col-xs-4">
                                SIWFT code: <span t-esc="o.partner_id.bank_ids[0].bank_bic"/>
                            </div>
                        </div>
                    </div>
                    <div class="row" t-if="o.payment_mode_id and not o.payment_mode_id.show_client_account" style="page-break-inside: avoid;">
                        <div class="col-xs-4">
                            <strong>Payment mode:</strong> <span t-field="o.payment_mode_id.name"/>
                        </div>
                        <div t-if="o.payment_mode_id.bank_id" class="col-xs-4">
                            Bank account: <span t-field="o.payment_mode_id.bank_id.acc_number"/>
                        </div>
                        <div t-if="o.payment_mode_id.bank_id" class="col-xs-4">
                            SIWFT code: <span t-field="o.payment_mode_id.bank_id.bank_bic"/>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </template>

        <template id="report_proforma">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'custom_documents.report_proforma_')"/>
                </t>
            </t>
        </template>

    </data>
</openerp>
